# Senior mHealth Lecture Project Environment Variables
# Copy this file to .env and update with your actual values

# ============================================
# Firebase Configuration
# ============================================
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
FIREBASE_APP_ID=your_firebase_app_id_here
FIREBASE_MEASUREMENT_ID=your_firebase_measurement_id_here

# ============================================
# Google Cloud Platform Configuration
# ============================================
# Project Configuration
GOOGLE_CLOUD_PROJECT=your_gcp_project_id_here
GOOGLE_APPLICATION_CREDENTIALS=path_to_your_service_account_key.json
GCP_REGION=asia-northeast3

# Google API Keys
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Cloud Storage
CLOUD_STORAGE_BUCKET=your_cloud_storage_bucket_here
AUDIO_UPLOAD_BUCKET=your_audio_upload_bucket_here

# BigQuery Configuration
BIGQUERY_DATASET=senior_mhealth_dataset
BIGQUERY_TABLE_PREFIX=mhealth_

# Cloud SQL Configuration (Optional)
CLOUD_SQL_CONNECTION_NAME=project:region:instance
DATABASE_NAME=senior_mhealth
DATABASE_USER=your_db_user_here
DATABASE_PASSWORD=your_db_password_here

# Vertex AI Configuration (Optional)
VERTEX_AI_LOCATION=asia-northeast3
VERTEX_AI_ENDPOINT=your_vertex_ai_endpoint_here

# Cloud Run Configuration
CLOUD_RUN_SERVICE_NAME=senior-mhealth-api
CLOUD_RUN_REGION=asia-northeast3

# Cloud Functions Configuration
FUNCTIONS_REGION=asia-northeast3

# Firebase Cloud Messaging (FCM)
FCM_SERVER_KEY=your_fcm_server_key_here