<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 배경색 (흰색에 약간 투명) -->
    <solid android:color="#F5F5F5" />
    
    <!-- 테두리 -->
    <stroke
        android:width="2dp"
        android:color="#E0E0E0" />
    
    <!-- 모서리 둥글게 -->
    <corners android:radius="16dp" />
    
    <!-- 그림자 효과를 위한 패딩 -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
        
</shape> 