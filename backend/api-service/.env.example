# Senior MHealth Core Service Environment Variables
# 제5강: Cloud Run과 FastAPI로 확장된 백엔드 구현

# Server Configuration
PORT=8080
HOST=0.0.0.0
ENVIRONMENT=development

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/serviceAccountKey.json

# Firestore Configuration
FIRESTORE_DATABASE_ID=(default)

# Cloud Storage Configuration
STORAGE_BUCKET_NAME=your-bucket-name

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Voice Analysis Service Configuration
VOICE_ANALYSIS_ENABLED=true
VOICE_MODEL_CACHE_SIZE=100

# Health Report Configuration
REPORT_GENERATION_ENABLED=true
PDF_STORAGE_BUCKET=your-reports-bucket

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60